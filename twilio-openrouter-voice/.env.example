# AI Daily Assistant - Environment Configuration
# ===============================================
# 
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# Security Configuration
# =======================

# OAuth Token Encryption Key (CRITICAL - Generate with: node scripts/generate-encryption-key.js)
# This key encrypts all OAuth tokens stored in the database
TOKEN_ENCRYPTION_KEY=your_256_bit_hex_key_here

# API Key for web interface authentication
# Generate a secure random string for production
JARVIS_API_KEY=your_secure_api_key_here

# Development Security Settings
# Only set to 'true' in local development if you need to bypass API key validation
# NEVER set this to 'true' in production, staging, or any shared environment
ALLOW_DEV_API_BYPASS=false

# Twilio Configuration
# ====================
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# OpenRouter AI Configuration
# ===========================
OPENROUTER_API_KEY=your_openrouter_api_key

# Supabase Configuration
# ======================
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Google OAuth Configuration
# ==========================
GOOGLE_CLIENT_ID=your_google_oauth_client_id
GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret
GOOGLE_REDIRECT_URI=http://localhost:3001/auth/google/callback

# Application Configuration
# =========================
NODE_ENV=development
PORT=3001

# Logging Configuration
# =====================
LOG_LEVEL=info

# Rate Limiting Configuration
# ===========================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security Headers Configuration
# ==============================
ENABLE_SECURITY_HEADERS=true
ENABLE_CORS=true

# Database Configuration
# ======================
# Additional database settings if needed
DB_POOL_SIZE=10
DB_TIMEOUT=30000

# Webhook Configuration
# =====================
WEBHOOK_BASE_URL=https://your-domain.com

# Feature Flags
# =============
ENABLE_VOICE_PROCESSING=true
ENABLE_CALENDAR_INTEGRATION=true
ENABLE_EMAIL_INTEGRATION=true
ENABLE_COMPREHENSIVE_TESTING=true

# Monitoring and Analytics
# ========================
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true

# Development Tools
# =================
ENABLE_DEBUG_LOGGING=false
ENABLE_REQUEST_LOGGING=true
